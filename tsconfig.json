{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "tsbuild",
    "baseUrl": "."
  },
  "include": ["package.json", "src"],
  "exclude": ["node_modules", "dist"]
}
