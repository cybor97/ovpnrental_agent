{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "tsbuild",
    "paths": {
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
